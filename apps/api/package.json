{
  "name": "printvisionbolt-api",
  "version": "1.0.0",
  "description": "PrintVisionBolt API",
  "packageManager": "bun@1.0.25",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --target node --outfile dist/index.js",
    "start": "bun run dist/index.js",
    "lint": "eslint . --fix",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.14.0",
    "@types/node": "^20.11.19",
    "fastify": "^4.26.1",
    "zod": "^3.22.4",
    "@printvisionbolt/api-types": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.0.5",
    "typescript": "^5.3.3",
    "eslint": "^8.57.0"
  }
}