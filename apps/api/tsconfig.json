{
  "extends": "@printvisionbolt/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node", "@types/node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}