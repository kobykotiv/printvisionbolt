{
  "extends": "@printvisionbolt/typescript-config/react-library.json",
  "include": ["src", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  }
}
